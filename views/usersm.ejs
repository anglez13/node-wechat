<%- include header %>
  <div class="container">	  
    <div class="row">
	  <div class="span8 table-style" >
	      <div class="page-header">
		    <h2>Users <small>All users</small></h2>
          </div>
	    <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>ID</th>
					<th>Name</th>
					<th>E-Mail</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
			  <% users.forEach(function (user,index) { %>
                <tr>
					<td>
                      <%=user.name%>
                    </td>
					<td>
                      <%=user.email%>
                    </td>
					<td>
						<div class="btn-group">
							<a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">Actions <span class="caret"></span></a>
							<ul class="dropdown-menu pull-right">
								<li><a href="/edit/<%= user.name %>"><i class="icon-pencil"></i> Edit</a></li>
								<li><a href="/remove/<%= user.name %>"><i class="icon-trash"></i> Delete</a></li>
							</ul>
						</div>
					</td>
                </tr>
              <%})%>
            </tbody>
        </table>
	  </div>	
    </div>
  <div>
<%- include footer %>